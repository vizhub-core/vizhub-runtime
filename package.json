{
  "name": "@vizhub/runtime",
  "version": "0.3.3",
  "description": "Flexible runtime environment for data visualization sandboxes",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs && npm run build:types",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json && echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json",
    "build:types": "tsc --emitDeclarationOnly --declarationDir ./dist/types",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prettier": "prettier {*.*,**/*.*} --write",
    "upgrade": "ncu -x svelte -u"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.14.0",
    "@types/uuid": "^10.0.0",
    "jsdom": "^26.0.0",
    "npm-check-updates": "^17.1.16",
    "prettier": "^3.5.3",
    "puppeteer": "^24.6.0",
    "rollup": "^4.39.0",
    "sucrase": "^3.35.0",
    "svelte": "4.2.9",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1"
  },
  "dependencies": {
    "@vizhub/viz-types": "^0.1.0",
    "@vizhub/viz-utils": "^0.1.0",
    "magic-sandbox": "^2.2.0",
    "uuid": "^11.1.0"
  }
}
